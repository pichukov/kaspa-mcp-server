{
  "name": "kaspa-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Kaspa blockchain operations using WASM SDK",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "kaspa-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "npm run build:sdk && tsc",
    "build:sdk": "cd packages/kaspa-wasm-sdk && npm run build",
    "start": "node dist/index.js",
    "dev": "npm run build:sdk && ts-node --esm src/index.ts",
    "clean": "rm -rf dist && cd packages/kaspa-wasm-sdk && npm run clean",
    "install-all": "npm install && cd packages/kaspa-wasm-sdk && npm install",
    "test": "npm run test:sdk",
    "test:sdk": "cd packages/kaspa-wasm-sdk && npm test"
  },
  "keywords": [
    "mcp",
    "kaspa",
    "blockchain",
    "server",
    "llm",
    "wasm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "kaspa-wasm-sdk": "file:./packages/kaspa-wasm-sdk"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=20.13.1"
  },
  "files": [
    "dist",
    "packages/kaspa-wasm-sdk/dist",
    "packages/kaspa-wasm-sdk/wasm",
    "packages/kaspa-wasm-sdk/package.json",
    "README.md"
  ],
  "workspaces": [
    "packages/*"
  ]
}